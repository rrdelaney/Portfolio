mixin headerIcon(text, icon)
    p.md-subhead.page-subhead
        i.fa.fa-lg(class=icon)
        = text

mixin sideCategory(title)
    .category&attributes(attributes)
        h5.category-row-title= title
        block

mixin category(title, subtitle)
    .category&attributes(attributes)
        h5.category-title.md-body-2= title
        h5.category-subtitle.md-caption= subtitle
        
        ul
            block

