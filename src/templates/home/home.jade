mixin letter(display)
    span.letter.fadeIn(ng-class='animationEnabled ? "animated" : ""')= display
    
mixin line(display)
    h3.line.fadeInUp(ng-class='animationEnabled ? "animated" : ""')= display
    
mixin fab(icon, text)
    md-button.md-fab.fadeIn(ui-sref=sref ng-class='animationEnabled ? "animated" : ""')&attributes(attributes)
        md-icon.fa.fa-2x(md-font-icon=icon)
        md-tooltip= text
        
mixin sidebar()
    .sidebar.fadeIn(ui-sref=sref ng-class='animationEnabled ? "animated" : ""')
        md-grid-list(md-cols-sm='2' md-cols='1' md-row-height-sm='1:1' md-row-height='4:1' md-gutter='12px' md-gutter-gt-sm='8px')
            md-grid-tile.md-primary
                i.fa.fa-5x.fa-inverse.fa-user(ng-if='isSmall()')
                md-grid-tile-footer
                    h3.md-headline About Me
                    
            md-grid-tile
                i.fa.fa-3x.fa-inverse.fa-terminal(ng-if='isSmall()')
                md-grid-tile-footer
                    h3.md-headline Projects
                    
            md-grid-tile
                i.fa.fa-3x.fa-inverse.fa-circle-thin(ng-if='isSmall()')
                md-grid-tile-footer
                    h3.md-headline Things
        
.home
    .main
        .name
            .word
                +letter('R')
                +letter('Y')
                +letter('A')
                +letter('N')
            .word
                +letter('D')
                +letter('E')
                +letter('L')
                +letter('A')
                +letter('N')
                +letter('E')
                +letter('Y')
            
        .description
            +line('SOFTWARE ENGINEER')
            +line('WEB DEVELOPER')
            
        .buttons
            +fab('fa-file-text', 'Resume')(ui-sref='resume')
            +fab('fa-pencil', 'Blog')(ui-sref='blog')
            +fab('fa-github', 'Github')(href='https://github.com/rrdelaney')
        
    md-button.md-icon-button.md-primary.sidenav-button(md-ripple-size='partial' ng-click='toggleSidenav()' ng-show='isSmall()')
        md-icon.fa(md-font-icon='fa-bars')
            
    md-sidenav.md-sidenav-right(md-component-id='right' ng-show='isSmall()')
        +sidebar()
