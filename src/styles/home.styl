@require 'material-color/material-color-prefixed'

letterCount = 7
letterDelay = .15
letterAnimationTime = letterCount * letterDelay

wordCount = 3
wordDelay = .5
wordAnimationTime = (wordCount + 1) * wordDelay

totalAnimationTime = letterAnimationTime + wordAnimationTime + .5

.home
    .sidenav-button
        position absolute
        left 2%
        top 2%

    .main
        margin 0 auto
        text-align center
        padding-top 10vh

        .name
            .letter
                font-size 400%
                padding-left 2px
                padding-right 2px
                animation-duration letterDelay

                for index in (2..letterCount)
                    &:nth-child({index})
                        animation-delay unit((index - 1) * letterDelay, 's')

            .space
                padding-left 10px
                padding-right 10px

        .description
            .line
                for index in (1..wordCount)
                    &:nth-child({index})
                        animation-delay unit((index * wordDelay) + letterAnimationTime, 's')

    .buttons
        margin 0 auto
        text-align center

        .md-button
            animation-delay unit(totalAnimationTime, 's')

            for background, index in $md-list-pink $md-list-cyan $md-list-deep-purple
                &:nth-child({index + 1})
                    background-color background[5]

                &:not([disabled]):hover:nth-child({index + 1})
                    background-color background[7]

    md-sidenav
        padding 1%
        md-grid-list md-grid-tile
            for background, index in $md-list-pink $md-list-cyan $md-list-deep-purple
                &:nth-child({index + 1})
                    background-color background[5]
